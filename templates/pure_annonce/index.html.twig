{% extends 'base.html.twig' %}

{% block title %}PureAnnonce Index{% endblock %}

{% block body %}
<header class="">
    {{ include('Includes/Header/index.html.twig') }}
</header>

<div class="bg-gray-100 py-8">
    <div class="container mx-auto px-6">
        <h1 class="text-3xl font-bold text-center text-lime-800 mb-8">Nos Annonces</h1>

        {% if pure_annonces is empty %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
                <p>Aucune annonce trouvée.</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for pure_annonce in pure_annonces %}
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h2 class="text-2xl font-semibold text-lime-900 mb-4">{{ pure_annonce.titre }}</h2>
                        <p class="text-gray-700 mb-2"><strong>Quantité :</strong> {{ pure_annonce.quantite }}</p>
                        <p class="text-gray-600 mb-4">{{ pure_annonce.description|slice(0, 100) }}...</p>
                        <p class="text-gray-500 text-sm">{{ pure_annonce.datePublication ? pure_annonce.datePublication|date('d M Y, H:i') : 'Non publiée' }}</p>
                        <div class="mt-4">
                            <a href="{{ path('annonce_show', {'id': pure_annonce.id}) }}" class="inline-block bg-lime-600 text-white py-2 px-4 rounded hover:bg-lime-700">Voir Détails</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<footer class="">
    {{ include('Includes/Footer/index.html.twig') }}
</footer>

{% endblock %}
