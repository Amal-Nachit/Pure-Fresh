{% extends 'base.html.twig' %}

{% block title %}Connexion Administrateur{% endblock %}

{% block body %}
<main class="bg-lime-900 min-h-screen flex items-center justify-center p-6">
    <div class="bg-gray-700 bg-opacity-40 rounded-lg shadow-lg p-8 w-full max-w-md">
        <h1 class="text-2xl sm:text-3xl font-bold text-yellow-400 mb-6 text-center">Connexion Administrateur</h1>
        
        {% if error %}
            <div class="bg-red-500 text-white p-4 rounded-lg mb-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('admin_login') }}" method="post" class="space-y-6">
            <div>
                <label for="email" class="block text-white text-sm font-bold mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full p-3 rounded-lg bg-gray-800 text-white focus:ring-2 focus:ring-yellow-400" required autofocus>
            </div>

            <div>
                <label for="password" class="block text-white text-sm font-bold mb-2">Mot de passe</label>
                <input type="password" id="password" name="password" class="w-full p-3 rounded-lg bg-gray-800 text-white focus:ring-2 focus:ring-yellow-400" required>
            </div>

            <div class="flex justify-between items-center">
                <div>
                    <label class="inline-flex items-center text-white">
                        <input type="checkbox" name="_remember_me" class="form-checkbox h-5 w-5 text-yellow-400">
                        <span class="ml-2">Se souvenir de moi</span>
                    </label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}" class="text-yellow-400 hover:underline">Mot de passe oubli√© ?</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div>
                <button type="submit" class="w-full bg-yellow-400 text-gray-900 p-3 rounded-lg font-bold hover:bg-yellow-500">
                    Connexion
                </button>
            </div>
        </form>
    </div>
</main>
{% endblock %}
