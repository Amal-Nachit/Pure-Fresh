{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Dashboard Administrateur</h1>

    <div class="mb-4">
        <p class="text-lg">Annonces publiées: <span class="font-bold">{{ nbAnnoncesPubliees }}</span></p>
    </div>

    <table class="min-w-full bg-white border border-gray-200">
        <thead>
            <tr class="bg-gray-100 border-b">
                <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Titre</th>
                <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Quantité</th>
                <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Date de Publication</th>
                <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for annonce in annonces %}
                <tr class="border-b">
                    <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.titre }}</td>
                    <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.quantite }}</td>
                    <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.datePublication|date('Y-m-d H:i') }}</td>
                    <td class="py-2 px-4 text-sm text-gray-900">
                        {% if annonce.isApprouve() is same as(1) %}
                            <span class="text-green-600">Approuvée</span>
                        {% elseif annonce.isApprouve() is same as(0) %}
                            <span class="text-red-600">Supprimée</span>
                        {% else %}
                            <a href="{{ path('admin_annonce_approuvee', { id: annonce.id }) }}" class="text-green-500 hover:text-green-700">Approuver</a>
                            <a href="{{ path('admin_annonce_refusee', { id: annonce.id }) }}" class="text-red-500 hover:text-red-700 ml-2">Refuser</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
