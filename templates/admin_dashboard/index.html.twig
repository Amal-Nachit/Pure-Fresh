
{% extends 'base.html.twig' %}
{% block body %}

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Dashboard Administrateur</h1>

    <a href="{{ path('user_index') }}" class="text-lg">Utilisateurs</a>

    <div class="mb-4">
        <a href="{{ path('annonce_index') }}" class="text-lg annonceCount">Annonces publiées: <span class="font-bold" id="nbAnnoncesPubliees">{{ nbAnnoncesPubliees }}</span></a>
            </div>

    {% if annonces|length > 0 %}
        <table class="min-w-full bg-white border border-gray-200">
            <thead>
                <tr class="bg-gray-100 border-b">
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Titre</th>
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Quantité</th>
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Date de Publication</th>
                    <th class="py-2 px-4 text-left text-sm font-medium text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody id="annonce-list">
                {% for annonce in annonces %}
                    <tr class="border-b" id="annonce-{{ annonce.id }}">
                        <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.titre }}</td>
                        <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.quantite }}</td>
                        <td class="py-2 px-4 text-sm text-gray-900">{{ annonce.datePublication|date('Y-m-d H:i') }}</td>
                        <td class="py-2 px-4 text-sm text-gray-900">
                            <button class="approuver-btn text-green-500 hover:text-green-700" data-id="{{ annonce.id }}">Approuver</button>
                            <button class="refuser-btn text-red-500 hover:text-red-700 ml-2" data-id="{{ annonce.id }}">Refuser</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-gray-600">Aucune annonce à approuver.</p>
    {% endif %}
</div>

{% block javascripts %}
    <script src="{{ asset('../assets/js/admin.js') }}"></script>
{% endblock %}
{% endblock %}
