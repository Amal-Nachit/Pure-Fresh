{% extends 'base.html.twig' %}
{% block body %}
<header>
    {{ include('Includes/Header/adminHeader.html.twig') }}
</header>
<div class="bg-gray-900 text-gray-200 min-h-screen flex flex-col">

    <main class="flex-1 p-6">
        <h1 class="text-3xl font-bold mb-6 text-center">Annonces à approuver</h1>
        <div class="mb-4 text-center">
            <a href="{{ path('annonce_index') }}" class="text-lg annonceCount"><span class="font-bold" id="nbAnnoncesPubliees">{{ nbAnnoncesPubliees }}</span></a>
        </div>

        {% if annonces|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full bg-gray-800 border border-gray-700">
                    <thead>
                        <tr class="bg-gray-700 border-b">
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Vendeur</th>
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Nom</th>
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Description</th>
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Date de Publication</th>
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Image</th>
                            <th class="py-3 px-4 text-left text-md font-medium text-gray-300">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="annonce-list">
                        {% for annonce in annonces %}
                            <tr class="border-b border-gray-600 hover:bg-gray-700" id="annonce-{{ annonce.id }}">
                                <td class="py-3 px-4 text-md text-gray-200">
                                    <a href="{{ path('user_show', {'id': annonce.pureUser.id}) }}" class="hover:underline">{{ annonce.pureUser.prenom }} {{ annonce.pureUser.nom }}</a>
                                </td>
                                <td class="py-3 px-4 text-md text-gray-200">
                                    <a href="{{ path('annonce_show', {'slug': annonce.slug}) }}" class="hover:underline">{{ annonce.nom }}</a>
                                </td>
                                <td class="py-3 px-4 text-md text-gray-200">{{ annonce.description }}</td>
                                <td class="py-3 px-4 text-md text-gray-200">{{ annonce.dateCreation ? annonce.dateCreation|date('d-m-Y') : '' }}</td>
                                <td class="py-3 px-4 text-md text-gray-200">
                                    <img src="{{ '/uploads/images/' ~ annonce.image }}" alt="{{ annonce.nom }}" class="w-16 h-16 object-cover rounded-lg">
                                </td>
                                <td class="py-3 px-4 text-md text-gray-200">
                                    <button class="approuver-btn text-green-400 hover:text-green-500" data-id="{{ annonce.id }}">Approuver</button>
                                    <button class="refuser-btn text-red-400 hover:text-red-500 ml-2" data-id="{{ annonce.id }}">Refuser</button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-gray-400 py-3">Aucune annonce à approuver.</p>
        {% endif %}
    </main>
</div>

{% block javascripts %}
    <script src="{{ asset('../assets/js/admin.js') }}"></script>
{% endblock %}
{% endblock %}
