{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}
{% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
{% endblock %}

{% block body %}
<main class="bg-gray-900 min-h-screen flex flex-col lg:flex-row">
<aside class="w-full lg:w-64 bg-gray-800 p-4 lg:p-6">
    <nav class="space-y-4">
        <h2 class="text-yellow-400 font-bold text-xl lg:text-2xl mb-4 lg:mb-6">Tableau de bord</h2>

        <a href="{{ path('home') }}" class="flex items-center justify-start py-2 px-4 rounded-lg {{ app.request.get('_route') == 'home' ? 'bg-yellow-500 text-black hover:bg-yellow-400' : 'bg-gray-700 text-white hover:bg-gray-600' }}">
            <i class="fas fa-home mr-2 {{ app.request.get('_route') == 'home' ? 'text-black' : 'text-white' }}"></i>
            <span>Accueil</span>
        </a>

        <a href="{{ path('dashboard_mes_annonces') }}" class="block py-2 px-4 rounded-lg {{ app.request.get('_route') == 'dashboard_mes_annonces' ? 'bg-yellow-500 text-black hover:bg-yellow-400' : 'bg-gray-700 text-white hover:bg-gray-600' }}">
            <i class="fa-solid fa-bullhorn mr-2 {{ app.request.get('_route') == 'dashboard_mes_annonces' ? 'text-black' : 'text-white' }}"></i>
            <span>Mes annonces</span>
        </a>

        <a href={{ path('dashboard_mes_ventes') }} class="block py-2 px-4 rounded-lg {{ app.request.get('_route') == 'dashboard_mes_ventes' ? 'bg-yellow-500 text-black hover:bg-yellow-400' : 'bg-gray-700 text-white hover:bg-gray-600' }}">
            <i class="fa-solid fa-clipboard-list mr-2 {{ app.request.get('_route') == 'dashboard_mes_ventes' ? 'text-black' : 'text-white' }}"></i>
            <span>Mes commandes</span>
        </a>

        <a href="{{ path('dashboard_mon_compte') }}" class="block py-2 px-4 rounded-lg {{ app.request.get('_route') == 'dashboard_mon_compte' ? 'bg-yellow-500 text-black hover:bg-yellow-400' : 'bg-gray-700 text-white hover:bg-gray-600' }}">
            <i class="fa-solid fa-user mr-2 {{ app.request.get('_route') == 'dashboard_mon_compte' ? 'text-black' : 'text-white' }}"></i>
            <span>Mon compte</span>
        </a>

        <a href="{{ path('app_logout') }}" class="block py-2 px-4 rounded-lg bg-red-600 text-white hover:bg-red-500">
            <i class="fa-solid fa-right-from-bracket mr-2 text-white"></i>
            <span>Déconnexion</span>
        </a>
    </nav>
</aside>
    <section class="flex-1 p-4 lg:p-8 bg-gray-900 text-white">
        {% block content %}
        
        {% if app.request.get('_route') == 'dashboard_mes_annonces' %}
            <h1 class="text-2xl lg:text-3xl font-bold text-yellow-400 mb-4 lg:mb-6">Mes annonces</h1>
            <p class="mb-4">Gérez vos annonces en toute simplicité.</p>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-gray-800 p-4 lg:p-6 rounded-lg shadow-lg">
                    <h2 class="text-lg lg:text-xl text-yellow-400 font-bold mb-2">Annonce 1</h2>
                    <p class="text-white mb-2">Description de l'annonce 1.</p>
                    <a href="#" class="text-yellow-400 hover:text-yellow-300">Modifier →</a>
                </div>
            </div>

        {% elseif app.request.get('_route') == 'dashboard_mes_commandes' %}
            <h1 class="text-2xl lg:text-3xl font-bold text-yellow-400 mb-4 lg:mb-6">Mes commandes</h1>
            <p class="mb-4">Consultez et gérez vos commandes ici.</p>
            <div class="bg-gray-800 p-4 lg:p-6 rounded-lg shadow-lg">
                <h2 class="text-lg lg:text-xl text-yellow-400 font-bold mb-2">Commandes récentes</h2>
                <ul class="text-white">
                    <li>Commande 1 - Statut: En cours</li>
                    <li>Commande 2 - Statut: Livrée</li>
                </ul>
            </div>

        {% elseif app.request.get('_route') == 'dashboard_mon_compte' %}
            <h1 class="text-2xl lg:text-3xl font-bold text-yellow-400 mb-4 lg:mb-6">Mon compte</h1>
            <p class="mb-4">Gérez vos informations personnelles.</p>
            <div class="bg-gray-800 p-4 lg:p-6 rounded-lg shadow-lg">
                <h2 class="text-lg lg:text-xl text-yellow-400 font-bold mb-2">Informations de compte</h2>
                <p class="text-white">Nom: Votre nom</p>
                <p class="text-white">Email: votre.email@example.com</p>
                <a href="#" class="text-yellow-400 hover:text-yellow-300">Modifier mes informations →</a>
            </div>

        {% else %}
            <h1 class="text-2xl lg:text-3xl font-bold text-yellow-400 mb-4 lg:mb-6">Bienvenue dans votre espace vendeur</h1>
            <p class="mb-4">Sélectionnez une option dans le menu pour commencer.</p>
        {% endif %}
        
        {% endblock %}
    </section>
</main>
{% endblock %}
