{% extends 'dashboard/vendeur.html.twig' %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-extrabold mb-8 text-yellow-500">Mes Annonces</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        {% for data in annoncesData %}
            <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300 flex flex-col" data-annonce-id="{{ data.annonce.id }}">
                <div class="relative">
                    <img src="{{ asset(data.imagePath) }}" alt="{{ data.annonce.nom }}" class="w-full h-48 object-cover">
                    <div class="absolute top-0 right-0 bg-yellow-500 text-black px-2 py-1 m-2 rounded-md text-sm font-bold">
                        {{ data.annonce.prix }} €
                    </div>
                </div>
                <div class="p-4 flex-grow">
                    <h2 class="text-xl text-yellow-400 font-semibold mb-2 truncate">{{ data.annonce.nom }}</h2>
                    <p class="text-gray-300 text-sm mb-2 line-clamp-2">{{ data.annonce.description | nl2br }}</p>
                    <p class="date-annonce text-gray-400 text-xs mb-4">Publié le {{ data.annonce.dateCreation ? data.annonce.dateCreation|date('d M Y') : 'Non publiée' }}</p>
                    <div class="mb-4">
                        <span class="statut-annonce text-sm font-bold 
                            {% if data.annonce.approuvee %}
                                text-green-500
                            {% else %}
                                text-red-500
                            {% endif %}
                        ">
                            {{ data.annonce.approuvee ? 'Approuvée' : 'En attente d\'approbation' }}
                        </span>
                    </div>
                </div>
                <div class="px-4 pb-4">
                    <a href="{{ path('annonce_edit', {'id': data.annonce.id}) }}" class="block w-full text-center py-2 bg-yellow-500 text-black font-bold rounded-lg hover:bg-yellow-400 transition duration-300">Modifier</a>
                </div>
            </div>
        {% else %}
            <p class="col-span-full text-center text-white text-lg">Vous n'avez pas encore d'annonces.</p>
        {% endfor %}
    </div>
    <div class="mt-8 text-center">
        <a href="{{ path('annonce_new') }}" class="inline-block py-3 px-6 bg-yellow-500 text-black font-bold rounded-lg hover:bg-yellow-400 transition duration-300">Créer une nouvelle annonce</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    function updateAnnonceStatuts() {
        fetch('{{ path('dashboard_annonces_statut') }}')
            .then(response => response.json())
            .then(data => {
                Object.keys(data).forEach(annonceId => {
                    const annonceElement = document.querySelector(`[data-annonce-id="${annonceId}"]`);
                    if (annonceElement) {
                        const statutElement = annonceElement.querySelector('.statut-annonce');
                        const dateElement = annonceElement.querySelector('.date-annonce');
                        
                        if (data[annonceId].approuvee) {
                            statutElement.textContent = 'Approuvée';
                            statutElement.classList.remove('text-red-500');
                            statutElement.classList.add('text-green-500');
                        } else {
                            statutElement.textContent = 'En attente d\'approbation';
                            statutElement.classList.remove('text-green-500');
                            statutElement.classList.add('text-red-500');
                        }
                        
                        dateElement.textContent = `Publié le ${data[annonceId].dateCreation}`;
                    }
                });
            })
            .catch(error => console.error('Erreur lors de la récupération des statuts:', error));
    }

    setInterval(updateAnnonceStatuts, 30000);

    updateAnnonceStatuts();
});
</script>
{% endblock %}
