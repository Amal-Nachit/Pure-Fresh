{% extends 'dashboard/vendeur.html.twig' %}
{% block content %}
    <h1 class="text-2xl font-bold mb-4 text-yellow-400">Mes ventes</h1>

    {% for vente in ventes %}
        <div class="border p-4 mb-4 rounded shadow">
            <h2 class="text-lg font-semibold">Commande #{{ vente.id }}</h2>
            <p><strong>Date :</strong> {{ vente.dateCommande|date('d-m-Y H:i') }}</p>
            <p>Acheteur : {{ vente.pureUser.nom }} {{ vente.pureUser.prenom }}</p>
            <p><strong>Annonce :</strong> {{ vente.pureAnnonce.nom }}</p>
            <p><strong>Quantité :</strong> {{ vente.quantite }}</p>
            {{ form_start(forms[vente.id]) }}
                {{ form_widget(forms[vente.id].statut , {'attr': {'class': 'w-full p-3 bg-gray-700 text-white rounded-lg shadow-md focus:ring-2 focus:ring-yellow-500 focus:outline-none'}} ) }}
                <button type="submit" class="px-4 py-2 bg-yellow-500 text-gray-900 rounded-lg shadow-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-700">Changer le statut</button>
            {{ form_end(forms[vente.id]) }}
        </div>
    {% else %}
        <p>Aucune vente trouvée.</p>
    {% endfor %}
{% endblock %}
