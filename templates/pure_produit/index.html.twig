{% extends 'dashboard/vendeur.html.twig' %}

{% block content %}
    <h1 class="text-3xl font-bold text-yellow-400 mb-6">Liste des Produits</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-gray-800 text-white">
            <thead class="bg-gray-900">
                <tr>
                    <th class="py-3 px-6 text-left">Action</th>
                    <th class="py-3 px-6 text-left">Nom</th>
                    <th class="py-3 px-6 text-left">Description</th>
                    <th class="py-3 px-6 text-left">Date de Création</th>
                    <th class="py-3 px-6 text-left">Image</th>
                    <th class="py-3 px-6 text-left">Prix</th>
                    <th class="py-3 px-6 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for pure_produit in pure_produits %}
                <tr class="border-t border-gray-700">
                    <td class="py-3 px-6">
                        <a href="{{ path('annonce_new', {'productId': pure_produit.id}) }}" class="bg-yellow-500 text-black px-4 py-2 rounded-lg hover:bg-yellow-400 transition duration-300">Ajouter une annonce</a>
                    </td>
                    <td class="py-3 px-6">{{ pure_produit.nom }}</td>
                    <td class="py-3 px-6">{{ pure_produit.description }}</td>
                    <td class="py-3 px-6">{{ pure_produit.dateCreation ? pure_produit.dateCreation|date('d-m-Y') : '' }}</td>
                    <td class="py-3 px-6">
                        <img src="{{ '/uploads/images/' ~ pure_produit.image }}" alt="{{ pure_produit.nom }}" class="w-16 h-16 object-cover rounded-lg">
                    </td>
                    <td class="py-3 px-6">{{ pure_produit.prix }}€</td>
                    <td class="py-3 px-6">
                        <a href="{{ path('produit_show', {'id': pure_produit.id}) }}" class="text-yellow-500 hover:text-yellow-300 mr-4">Show</a>
                        <a href="{{ path('produit_edit', {'id': pure_produit.id}) }}" class="text-yellow-500 hover:text-yellow-300">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="py-3 px-6 text-center">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('produit_new') }}" class="mt-6 inline-block py-2 px-4 bg-yellow-500 text-black rounded-lg hover:bg-yellow-400 transition duration-300">Créer un nouveau produit</a>
{% endblock %}
