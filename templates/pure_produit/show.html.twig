{% extends 'base.html.twig' %}

{% block title %}PureProduit{% endblock %}

{% block body %}
    <h1>PureProduit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pure_produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pure_produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pure_produit.description }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ pure_produit.dateCreation ? pure_produit.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ '/uploads/images/' ~ pure_produit.image }}" alt="{{ pure_produit.nom }}">
                </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ pure_produit.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': pure_produit.id}) }}">edit</a>

    {{ include('pure_produit/_delete_form.html.twig') }}
{% endblock %}
