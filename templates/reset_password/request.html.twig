{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Réinitialiser votre mot de passe
        </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ flash_error|trans }}</span>
                </div>
            {% endfor %}

            {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(requestForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(requestForm.email, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(requestForm.email, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>

                <div class="text-sm text-gray-600">
                    <small>
                        Entrez votre adresse e-mail, et nous vous enverrons un lien
                        pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Réinitialiser
                    </button>
                </div>
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}
