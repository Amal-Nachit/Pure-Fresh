    <div class="group relative flex flex-col items-center">
        <button class="flex flex-col items-center focus:outline-none" onclick="window.location.href='{{ path('dashboard') }}'; activateIcon(this)">
            <img src="{{ asset('../../../icon-svg/user.svg') }}" alt="Compte" class="h-8 w-8 text-yellow-400 transition-transform duration-300"/>
            <span class="mt-2 text-yellow-400 opacity-0 transition-opacity duration-300 text-sm">Compte</span>
        </button>
    </div>
</div>
</div>

<script>
    function activateIcon(button) {

        const buttons = document.querySelectorAll('.group button');
        buttons.forEach(btn => {
            const img = btn.querySelector('img');
            const span = btn.querySelector('span');
            img.classList.remove('translate-y-2');
            span.classList.remove('opacity-100');
        });
        
        // Activer l'icône et le texte cliqués
        const img = button.querySelector('img');
        const span = button.querySelector('span');
        img.classList.add('translate-y-2');
        span.classList.add('opacity-100');
    }
</script>

<style>
    .translate-y-2 {
        transform: translateY(-0.5rem); 
    }
    .opacity-100 {
        opacity: 1; 
    }
</style>
