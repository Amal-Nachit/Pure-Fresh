<div class="fixed bottom-0 left-0 w-full bg-lime-900 flex justify-around p-3 md:hidden">
    <div class="group relative flex flex-col items-center">
        <button class="flex flex-col items-center focus:outline-none" onclick="window.location.href='{{ path('home') }}'; activateIcon(this)">
    <img src="{{ asset('../../../icon-svg/home.svg') }}" alt="Accueil" class="h-8 w-8 text-yellow-400 transition-transform duration-300"/>
    <span class="mt-2 text-yellow-400 opacity-0 transition-opacity duration-300 text-sm">Accueil</span>
</button>

    </div>

    <div class="group relative flex flex-col items-center">
        <button class="flex flex-col items-center focus:outline-none" onclick=" window.location.href='{{ path('annonce_index') }}'; activateIcon(this)">
            <img src="{{ asset('../../../icon-svg/vegetables.svg') }}" alt="Ventes" class="h-8 w-8 text-yellow-400 transition-transform duration-300"/>
            <span class="mt-2 text-yellow-400 opacity-0 transition-opacity duration-300 text-sm">Ventes</span>
        </button>
    </div>

    <div class="group relative flex flex-col items-center">
        <button class="flex flex-col items-center focus:outline-none" onclick="window.location.href='{{ path('commande_index') }}'; activateIcon(this)">
            <img src="{{ asset('../../../icon-svg/panier.svg') }}" alt="Panier" class="h-8 w-8 text-yellow-400 transition-transform duration-300"/>
            <span class="mt-2 text-yellow-400 opacity-0 transition-opacity duration-300 text-sm">Panier</span>
